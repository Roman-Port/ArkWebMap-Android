<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/hub_server_entry_icon"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:src="@drawable/placeholder_server_entry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hub_server_title"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:layout_marginTop="2sp"
        android:text="The"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hub_server_entry_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hub_server_map"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:text="Extinction"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hub_server_entry_icon"
        app:layout_constraintTop_toBottomOf="@+id/hub_server_title" />


</android.support.constraint.ConstraintLayout>